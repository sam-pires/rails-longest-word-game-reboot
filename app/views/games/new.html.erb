<h1>Nex Game</h1>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>
<%= @letters %>

<p>What is your best word?</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="You word here">
  <input id="grid" name="grid" type="hidden" value= "<%= @letters %>" >
  <input type="submit">
</form>
